{
    "boot-source": {
        "kernel_image_path": "resources/kernel.bin",
        "boot_args": "console=ttyS0 reboot=k panic=1 pci=off random.trust_cpu=on"
    },
    "drives": [
        {
            "drive_id": "rootfs",
            "path_on_host": "resources/rootfs.ext4",
            "is_root_device": true,
            "is_read_only": false
        }
    ],
    "network-interfaces": [
        {
            "iface_id": "eth0",
            "host_dev_name": "tap0"
        }
    ],
    "machine-config": {
        "vcpu_count": 1,
        "mem_size_mib": 2048,
        "smt": false
    },
    "vsock": {
        "guest_cid": 3,
        "uds_path": "v.sock",
        "vsock_id": "vsock0"
    },
    "logger": {
        "log_path": "fc.log",
        "level": "Info",
        "show_level": true,
        "show_log_origin": true
    }
}